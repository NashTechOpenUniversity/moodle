{{!
    @template mod_quiz/divider_feedback

    Displays a add feedback button.

    Context variables required for this template:
    * afterindex - Where the new feedback will be placed after.

    Example context (json):
    {
        "afterindex": 0
    }
}}
<div class="divider bulk-hidden d-flex justify-content-center align-items-center my-3 position-relative">
    <hr>
    <div class="divider-content px-3 visible position-absolute">
        <button class="btn add-content feedbackadd-button d-flex justify-content-center align-items-center p-1 icon-no-margin"
                data-action="add-feedback"
                data-event-attached="false"
                data-after="{{afterindex}}"
                aria-label="{{#str}}insertfeedbackbefore, quiz, { "afterindex": {{#quote}} {{afterindex}} {{/quote}} } {{/str}}"
                tabindex="0"
                title="{{#str}}addoverallfeedback, quiz{{/str}}"
        >
             {{#pix}} t/add, core {{/pix}}
        </button>
    </div>
</div>

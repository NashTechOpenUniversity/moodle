{{!
    @template mod_quiz/cellmenu

    This template renders action menu for a given cell in grade item.
    Example context (json):
    {
        "deletegradeitemurl": "<a class='dropdown-item' aria-label='Delete grade item 1' role='menuitem' data-action-delete='1' href='#'><i class='icon fa fa-trash fa-fw ' title='Delete' role='img' aria-label='Delete'></i>Delete</a>",
        "overallfeedbackurl": "<a class='dropdown-item' aria-label='Add overall feedback' role='menuitem' data-contextid='16' data-action-add-feedback='1' href='#' ><i class='icon fa fa-plus fa-fw ' title='Add overall feedback' role='img' aria-label='Add overall feedback'></i>Add overall feedback</a>"
    }
}}
<div class="action-menu moodle-actionmenu gradeitem-feedback text-left grade-item-actions-menu" data-collapse="menu">
    <div class="dropdown text-center">
        <button class="btn btn-link btn-icon icon-size-3 cellmenubtn text-black"
            type="button" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            <i class="icon fa fa-ellipsis-h fa-fw m-0" title="{{#str}} actionsmenu, core {{/str}}" aria-hidden="true"></i>
            <span class="sr-only">{{#str}} cellactions, gradereport_grader {{/str}}</span>
        </button>

        <div role="menu" class="dropdown-menu">
            {{#overallfeedbackurl}}{{{overallfeedbackurl}}}{{/overallfeedbackurl}}
            {{#deletegradeitemurl}}{{{deletegradeitemurl}}}{{/deletegradeitemurl}}
        </div>
    </div>
</div>

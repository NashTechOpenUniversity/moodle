{{!
    @template tiny_recordrtc/allowed_download

    Insert recording template.

    Example context (json):
    {
     "alloweddownloadhelpicon": {
            "text": "Help with something"
        }
    }
}}
<div data-purpose="allowed-download-container" class="row hide">
    <div class="col-1"></div>
    <div class="col-10">
        <div class="allowed_download">
            <div class="form-check">
                <!-- Default is checked -->
                <input type="checkbox" checked class="form-check-input" id="allowed-download" data-action="allowed-download">
                <label class="checkbox-text" for="allowed-download"> {{#str}} alloweddownload, tiny_recordrtc {{/str}}</label>
            </div>
            {{#alloweddownloadhelpicon}}
                {{> core/help_icon }}
            {{/alloweddownloadhelpicon}}
        </div>
    </div>
    <div class="col-3"></div>
</div>
